@model QuestApp.ViewModels.EditViewModel;
@{
    ViewData["Title"] = "Edit";
}
<h2>Create</h2>
<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label"></label>
                <input asp-for="@Model.Name" class="form-control" readonly="@(true)" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Mobile" class="control-label"></label>
                <input asp-for="@Model.Mobile" class="form-control" readonly="@(true)" />
                <span asp-validation-for="@Model.Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Note" class="control-label"></label>
                <input asp-for="@Model.Note" class="form-control" />
                <span asp-validation-for="@Model.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input asp-for="@Model.Email" class="form-control" readonly="@(true)" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BookedDate" class="control-label"></label>
                <input asp-for="@Model.BookedDate" class="form-control" readonly="@(true)" />
                <span asp-validation-for="@Model.BookedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="@Model.Treatment.TreatmentTitle" class="control-label"></label>
                    <select asp-for="@Model.treatmentId" asp-items="@(new SelectList(@ViewBag.ListOfItems,"id","TreatmentTitle"))" class="form-control"></select>

                </div>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="@Model.TimeSlot.TimeSlotTitle"> </label>
                    <select asp-for="@Model.TimeSlotId" asp-items="@(new SelectList(@ViewBag.ListOfTimes,"Id","TimeSlotTitle"))" class="form-control"></select>

                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-default" asp-action="EditUser" asp-route-id="@Model.BookingId" />
            </div>

        </form>
    </div>
</div>
